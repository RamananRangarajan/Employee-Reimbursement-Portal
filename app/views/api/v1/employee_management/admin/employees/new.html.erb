<h2>New Employee</h2>

<%= form_with model: @employee, url: api_v1_employee_management_admin_employees_path, local: true do |f| %>
  <div style="display: flex; gap: 24px;">
    <div>
      <%= f.label :first_name, "First name" %><br>
      <%= f.text_field :first_name, class: "form-control", placeholder: "Mark" %>
    </div>
    <div>
      <%= f.label :last_name, "Last name" %><br>
      <%= f.text_field :last_name, class: "form-control", placeholder: "Otto" %>
    </div>
    <div>
      <%= f.label :email, "Email Address" %><br>
      <%= f.email_field :email, class: "form-control", placeholder: "@" %>
    </div>
  </div>

  <div style="display: flex; gap: 24px; margin-top: 20px;">
    <div>
      <%= f.label :designation, "Designation" %><br>
      <%= f.text_field :designation, class: "form-control" %>
    </div>
    <div>
      <%= f.label :department, "Department" %><br>
      <%= f.select :department, options_for_select(["Choose...", "HR", "Finance", "IT", "Operations"]), {}, class: "form-control" %>
    </div>
  </div>

  <div style="margin-top: 24px;">
    <%= f.submit "Create", class: "btn btn-primary" %>
  </div>
<% end %>
    